<Window x:Class="SpreadTrader.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SpreadTrader"
		xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:p="clr-namespace:SpreadTrader.Properties"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="Settings" WindowStartupLocation="CenterScreen" Height="223.043" Width="500" ResizeMode="NoResize" ShowInTaskbar="False" Closing="Window_Closing">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="280*" />
			<RowDefinition Height="24*"/>
			<RowDefinition Height="5*" />
		</Grid.RowDefinitions>
		<Grid Name="grid1" Margin="0,0,0,9">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="162*" />
				<ColumnDefinition Width="337*" />
			</Grid.ColumnDefinitions>
			<StackPanel>
				<Label Content="Betfair User" Height="20" FontSize="10" Margin="4,0,6,0" HorizontalAlignment="Right"  Padding="5,3" />
				<Label Content="Betfair Password" Height="20" FontSize="10" Margin="4,0,6,0" HorizontalAlignment="Right"  Padding="5,3" />
				<Label Content="Betfair AppKey" Height="20" FontSize="10" Margin="4,0,6,0" HorizontalAlignment="Right"  Padding="5,3" />
				<Label Content="X509 Cert File" Height="20" FontSize="10" Margin="4,0,6,0" HorizontalAlignment="Right"  Padding="5,3" />
				<Label Content="Cert File Password" Height="20" FontSize="10" Margin="4,0,6,0" HorizontalAlignment="Right"  Padding="5,3" />
				<Label Content="Proxy" Height="20" FontSize="10" Margin="4,0,6,0" HorizontalAlignment="Right"  Padding="5,3" />
				<Label Content="Wait (ms)" HorizontalAlignment="Right" FontSize="10" Height="20" Margin="4,0,6,0" Padding="5,3" />
			</StackPanel>
			<StackPanel Grid.Column="1" >
				<TextBox  Text="{Binding Source={x:Static p:Settings.Default}, Path=BFUser, Mode=TwoWay}" Height="20" FontSize="10" Margin="0,0,4,0" />
				<TextBox  Text="{Binding Source={x:Static p:Settings.Default}, Path=BFPassword, Mode=TwoWay}" Height="20" FontSize="10" Margin="0,0,4,0" />
				<TextBox  Text="{Binding Source={x:Static p:Settings.Default}, Path=AppKey, Mode=TwoWay}" Height="20" FontSize="10" Margin="0,0,4,0" />
				<TextBox  Text="{Binding Source={x:Static p:Settings.Default}, Path=CertFile, Mode=TwoWay}" Height="20" FontSize="10" Margin="0,0,4,0" />
				<TextBox  Text="{Binding Source={x:Static p:Settings.Default}, Path=CertPassword, Mode=TwoWay}" Height="20" FontSize="10" Margin="0,0,4,0" />
				<TextBox  Text="{Binding Source={x:Static p:Settings.Default}, Path=Proxy, Mode=TwoWay}" Height="20" FontSize="10" Margin="0,0,4,0" />
				<TextBox  Text="{Binding Source={x:Static p:Settings.Default}, Path=WaitBF, Mode=TwoWay}" Height="20" FontSize="10" Margin="0,0,4,0" />
			</StackPanel>
		</Grid>
		<StackPanel VerticalAlignment="Bottom" Orientation="Horizontal" Height="20" Grid.RowSpan="2" >
			<TextBlock Text="{Binding Path=ver, StringFormat='Version {0}'}" Margin="5,1" TextAlignment="Left" Width="410" VerticalAlignment="Center" />
			<Button Content="OK" IsDefault="True" FontSize="10" Click="Button_Click" HorizontalAlignment="Right" Width="51" VerticalAlignment="Center" />
		</StackPanel>
	</Grid>
</Window>

<UserControl x:Class="SpreadTrader.BettingGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpreadTrader"
	         DataContext="{Binding RelativeSource={RelativeSource Self}}"
             mc:Ignorable="d" d:DesignWidth="600" >
	<UserControl.Resources>
		<Style TargetType="CheckBox" BasedOn="{StaticResource {x:Type CheckBox}}">
			<Setter Property="VerticalAlignment" Value="Center"/>
			<Setter Property="HorizontalAlignment" Value="Center"/>
		</Style>
		<Style BasedOn="{StaticResource {x:Type Button}}" 
            TargetType="{x:Type Button}">
			<Setter Property="FontSize" Value="12"/>
			<EventSetter Event="Click" Handler="Button_Click"/>
		</Style>
		<Style BasedOn="{StaticResource {x:Type Label}}" 
            TargetType="{x:Type Label}">
			<Setter Property="FontSize" Value="12"/>
			<Setter Property="Width" Value="auto"/>
		</Style>
		<Style x:Key="GridItemsStyle"
           TargetType="ItemsControl">
			<Setter Property="ItemsPanel">
				<Setter.Value>
					<ItemsPanelTemplate>
						<Grid>
							<Grid.RowDefinitions>
								<RowDefinition />
							</Grid.RowDefinitions>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="160"/>
								<ColumnDefinition Width="10*"/>
								<ColumnDefinition Width="10*"/>
								<ColumnDefinition Width="10*"/>
								<ColumnDefinition Width="10*"/>
								<ColumnDefinition Width="10*"/>
							</Grid.ColumnDefinitions>
						</Grid>
					</ItemsPanelTemplate>
				</Setter.Value>
			</Setter>
		</Style>
	</UserControl.Resources>
	<Grid>
		<Grid Name="Grid" Margin="0,8,0,8">
			<StackPanel Orientation="Vertical">
				<Grid>
					<ItemsControl Style="{StaticResource GridItemsStyle}">
						<StackPanel Orientation="Horizontal">
							<Label Grid.Column="0" Content="Active" HorizontalContentAlignment="Left" Width="140"/>
							<CheckBox/>
						</StackPanel>
						<CheckBox Grid.Column="1"></CheckBox>
						<CheckBox Grid.Column="2"></CheckBox>
						<CheckBox Grid.Column="3"></CheckBox>
						<CheckBox Grid.Column="4"></CheckBox>
						<CheckBox Grid.Column="5"></CheckBox>
					</ItemsControl>
				</Grid>
				<Grid>
					<ItemsControl Style="{StaticResource GridItemsStyle}" >
						<Label Grid.Column="0" Content="Stakes" HorizontalContentAlignment="Left"/>
						<Label Grid.Column="1" Content="{Binding Path=Stakes[0]}"/>
						<Label Grid.Column="2" Content="{Binding Path=Stakes[1]}"/>
						<Label Grid.Column="3" Content="{Binding Path=Stakes[2]}"/>
						<Label Grid.Column="4" Content="{Binding Path=Stakes[3]}"/>
						<Label Grid.Column="5" Content="{Binding Path=Stakes[4]}"/>
					</ItemsControl>
				</Grid>
				<Grid>
					<ItemsControl Style="{StaticResource GridItemsStyle}" >
						<Label Grid.Column="0" Content="Prices" HorizontalContentAlignment="Left"/>
						<Label Grid.Column="1" Content="{Binding Path=Prices[0]}"/>
						<Label Grid.Column="2" Content="{Binding Path=Prices[1]}"/>
						<Label Grid.Column="3" Content="{Binding Path=Prices[2]}"/>
						<Label Grid.Column="4" Content="{Binding Path=Prices[3]}"/>
						<Label Grid.Column="5" Content="{Binding Path=Prices[4]}"/>
					</ItemsControl>
				</Grid>
			</StackPanel>
		</Grid>
	</Grid>
</UserControl>

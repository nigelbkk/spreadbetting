<UserControl x:Class="SpreadTrader.ClosableHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="23" d:DesignWidth="81" Margin="0">
	<UserControl.Resources>
	</UserControl.Resources>
	<Grid>
		<StackPanel Orientation="Horizontal" Height="20">
			<Label Name="Label" Content="TabItem" Margin="1,-3,0,0" FontSize="12" />
			<Image Name="Image" Margin="4,0,4,0" Source="/SpreadTrader;component/Images/close.png" PreviewMouseDown="Image_PreviewMouseDown" />
		</StackPanel>
	</Grid>
</UserControl>

<UserControl x:Class="SpreadTrader.MarketControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpreadTrader"
             mc:Ignorable="d" d:DesignWidth="400" >
	<UserControl.Resources>
	</UserControl.Resources>
	<Grid Name="MarketControlGrid" Background="Gray"  DataContext="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}" >
		<Grid.RowDefinitions>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<Grid Name ="MarketHeader" Grid.Row="0" Height="28" VerticalAlignment="Top" Background="LightBlue">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="34"/>
				<ColumnDefinition Width="34"/>
				<ColumnDefinition Width="3*"/>
			</Grid.ColumnDefinitions>
			<Button Grid.Column="0" Click="Button_Click" Tag="Market Description" Background="LightCyan" ToolTip="Market Description" HorizontalAlignment="Left" Width="34">
				<Image Source="/SpreadTrader;component/Images/info.png" />
			</Button>
			<Button Tag="Hide Grid" Grid.Column="1" Background="LightCyan"  HorizontalContentAlignment="Left" ToolTip="Hide The Grid" Width="24" Click="Button_Click" >
				<StackPanel Orientation="Vertical">
					<Image Name="UpArrow" Source="/SpreadTrader;component/Images/up_arrow.png"  Visibility="Visible" Height="15" Width="17"/>
					<Image Name="DownArrow" Source="/SpreadTrader;component/Images/down_arrow.png" Visibility="Collapsed"/>
				</StackPanel>
			</Button>
			<Label Grid.Column="2" Content="{Binding MarketNode.FullName}" Padding="6,0,0,0" HorizontalContentAlignment="Left" Background="LightCyan"/>
		</Grid>
		<Grid Grid.Row="1" Background="Ivory">
			<DockPanel>
				<Grid Name="UpperGrid" Loaded="UpperGrid_Loaded">
					<Grid.RowDefinitions>
						<RowDefinition Height="140"/>
						<RowDefinition Height="*"/>
					</Grid.RowDefinitions>
					<Grid Grid.Row="0" Name="RunnersGrid" Background="LightBlue">
						<local:RunnersControl x:Name="RunnersControl" />
					</Grid>
					<Grid Grid.Row="1" Background="Yellow">
						<DockPanel>
							<Grid Name ="LowerGrid" Loaded="LowerGrid_Loaded">
								<Grid.RowDefinitions>
									<RowDefinition Height="3*"/>
									<RowDefinition Height="*"/>
								</Grid.RowDefinitions>
								<Grid Name="BettingGrid" Grid.Row="0" Background="Cyan" >
									<!--<local:BettingGrid/>-->
								</Grid>
								<Grid Grid.Row="1" Background="LightPink" Loaded="LowerGrid_Loaded" />
								<GridSplitter Grid.Row="1" Height="4" VerticalAlignment="Top" HorizontalAlignment="Stretch" Background="Gray" ResizeDirection="Rows" DragCompleted="GridSplitter_DragCompleted_1"  />
							</Grid>
						</DockPanel>
					</Grid>
					<GridSplitter Grid.Row="1" Height="4" VerticalAlignment="Top" HorizontalAlignment="Stretch" Background="Gray" ResizeDirection="Rows" DragCompleted="GridSplitter_DragCompleted"/>
				</Grid>
			</DockPanel>
		</Grid>
	</Grid>
</UserControl>

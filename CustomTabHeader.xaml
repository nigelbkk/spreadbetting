<UserControl x:Class="SpreadTrader.CustomTabHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpreadTrader"
             mc:Ignorable="d" 
             d:DesignHeight="24" d:DesignWidth="180">
    <Grid>
        <StackPanel Orientation="Horizontal" MouseDown="StackPanel_MouseDown" >
            <Label Content="Custom TabItem"  Width="auto"  Foreground = "darkgray" Background="Transparent" Height="23" HorizontalAlignment="Left" Margin="0,1,0,0" Name="TabTitle" VerticalAlignment="Top" FontFamily="Courier" FontSize="12"  />

            <Button Content="X" Click ="Button_Click" Background="Transparent" Margin="0,3,0,0" Height="19" HorizontalAlignment="Right"  VerticalAlignment="Top" Width="20" FontFamily="Courier" FontWeight="Normal" FontSize="12" Padding="0" ToolTip="Close"/>
        </StackPanel>
    </Grid>
</UserControl>

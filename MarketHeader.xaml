<UserControl x:Class="SpreadTrader.MarketHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpreadTrader"
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             mc:Ignorable="d" 
             d:DesignHeight="34" d:DesignWidth="800">
	<UserControl.Resources>
		<local:TimeConverter x:Key="converter" />
		<local:OddsConverter x:Key="oconverter" />
		<local:CurrencyConverter x:Key="cconverter" />
		<Style BasedOn="{StaticResource {x:Type Button}}" 
            TargetType="{x:Type Button}">
			<Setter Property="FontSize" Value="12"/>
			<EventSetter Event="Click" Handler="Button_Click"/>
		</Style>
		<Style BasedOn="{StaticResource {x:Type Label}}" 
            TargetType="{x:Type Label}">
			<Setter Property="FontSize" Value="11"/>
			<Setter Property="Width" Value="auto"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="HorizontalAlignment" Value="Left"/>
		</Style>
	</UserControl.Resources>
	<Grid Grid.Row="0" Background="Ivory">
		<Border BorderBrush="DarkGray" BorderThickness="1.0">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="38"/>
					<ColumnDefinition Width="38"/>
					<ColumnDefinition Width="38"/>
					<ColumnDefinition Width="auto"/>
					<ColumnDefinition Width="auto"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="auto"/>
				</Grid.ColumnDefinitions>
				<Button Grid.Column="0" Tag="Sidebar Visibility" ToolTip="Show/Hide Sidebar" HorizontalAlignment="Left" Padding="4,0,4,0" Click="Button_Click_1">
					<Image Height="30" Source="/Images/sidebar.png" />
				</Button>
				<Button Grid.Column="1" Tag="Market Description" ToolTip="Market Description" HorizontalAlignment="Left" Padding="4,0,4,0">
					<Image Height="30" Source="/SpreadTrader;component/Images/info.png" />
				</Button>
				<Button Tag="Hide Grid" Grid.Column="2" HorizontalContentAlignment="Left" ToolTip="Hide The Grid"  Padding="4,0,4,0">
					<StackPanel Orientation="Vertical" Margin="2,0,2,0">
						<Image Height="30" Source="/SpreadTrader;component/Images/up_arrow.png"  Visibility="{Binding up_visible}"/>
						<Image Height="30" Source="/SpreadTrader;component/Images/down_arrow.png" Visibility="{Binding down_visible}"/>
					</StackPanel>
				</Button>
				<Label Grid.Column="4" Padding="6,0,10,0">
					<StackPanel Orientation="Horizontal">
						<Label Content="{Binding FullName}" Margin="0,0,10,0" Padding="6,0,10,0" FontWeight="DemiBold"/>
						<TextBlock Text ="Total Matched: "/>
						<TextBlock Text="{Binding TotalMatched, Mode=OneWay, Converter={StaticResource cconverter}}"/>
					</StackPanel>
				</Label>
				<Button  Tag="Connect"  Grid.Column="5" Visibility ="Hidden" HorizontalAlignment="Left" Content="{Binding Path=ConnectButtonText}" Margin="525,2,0,2" Padding="6,0,7,2" Height="28"></Button>
				<Label Grid.Column="6" Content="{Binding Path=TimeToGo}" Foreground="{Binding Path=TimeToGoColor}" Margin="0,0,80,0" HorizontalAlignment="Right" FontWeight="Bold" FontSize="18"></Label>
				<Label Grid.Column="7" Content="{Binding Path=Lag}" Padding="6,0,6,0" Width="80" HorizontalAlignment="Right"  BorderThickness="1"/>
				<!--<Label Grid.Column="6" Padding="6,0,10,0"  HorizontalAlignment="Right">
					<StackPanel Orientation="Horizontal">
						<TextBox Text="Streaming" Background="{Binding Path=StreamingColor}" Margin="10,0" Padding="6,0,7,2" Height="28"/>
						<Label Content="{Binding UpdateRate, Converter={StaticResource converter}}" Padding="6,0,6,0" Width="60" HorizontalAlignment="Right"  BorderThickness="1"/>
						<Label Content="{Binding TurnaroundTime}" Padding="6,0,6,0" HorizontalAlignment="Right" BorderThickness="1"/>
					</StackPanel>
				</Label>-->
			</Grid>
		</Border>
	</Grid>
</UserControl>

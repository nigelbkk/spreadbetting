<UserControl x:Class="SpreadTrader.BettingGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpreadTrader"
	         DataContext="{Binding RelativeSource={RelativeSource Self}}"
             mc:Ignorable="d" d:DesignWidth="600" >
	<UserControl.Resources>
		<Style TargetType="CheckBox" BasedOn="{StaticResource {x:Type CheckBox}}">
			<Setter Property="VerticalAlignment" Value="Center"/>
			<Setter Property="HorizontalAlignment" Value="Center"/>
		</Style>
		<Style BasedOn="{StaticResource {x:Type Button}}" 
            TargetType="{x:Type Button}">
			<Setter Property="FontSize" Value="12"/>
			<!--<EventSetter Event="Click" Handler="Button_Click"/>-->
		</Style>
		<Style BasedOn="{StaticResource {x:Type Label}}" 
            TargetType="{x:Type Label}">
			<Setter Property="FontSize" Value="12"/>
			<Setter Property="Width" Value="auto"/>
		</Style>
		<Style x:Key="GridItemsStyle"
           TargetType="ItemsControl">
			<Setter Property="ItemsPanel">
				<Setter.Value>
					<ItemsPanelTemplate>
						<Grid>
							<Grid.RowDefinitions>
								<RowDefinition />
							</Grid.RowDefinitions>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="160"/>
								<ColumnDefinition Width="10*"/>
								<ColumnDefinition Width="10*"/>
								<ColumnDefinition Width="10*"/>
								<ColumnDefinition Width="10*"/>
								<ColumnDefinition Width="10*"/>
								<ColumnDefinition Width="10*"/>
								<ColumnDefinition Width="10*"/>
								<ColumnDefinition Width="10*"/>
								<ColumnDefinition Width="10*"/>
							</Grid.ColumnDefinitions>
						</Grid>
					</ItemsPanelTemplate>
				</Setter.Value>
			</Setter>
		</Style>
	</UserControl.Resources>
	<Grid>
		<Grid Name="Grid" Margin="0,8,0,8">
			<StackPanel Orientation="Vertical">
				<Grid>
					<ItemsControl Style="{StaticResource GridItemsStyle}">
						<StackPanel Orientation="Horizontal">
							<Label Grid.Column="0" Content="Active" HorizontalContentAlignment="Left" Width="140"/>
							<CheckBox/>
						</StackPanel>
						<CheckBox Grid.Column="1"></CheckBox>
						<CheckBox Grid.Column="2"></CheckBox>
						<CheckBox Grid.Column="3"></CheckBox>
						<CheckBox Grid.Column="4"></CheckBox>
						<CheckBox Grid.Column="5"></CheckBox>
						<CheckBox Grid.Column="6"></CheckBox>
						<CheckBox Grid.Column="7"></CheckBox>
						<CheckBox Grid.Column="8"></CheckBox>
						<CheckBox Grid.Column="9"></CheckBox>
					</ItemsControl>
				</Grid>
				<Grid>
					<ItemsControl Style="{StaticResource GridItemsStyle}">
						<StackPanel Orientation="Horizontal">
							<Label Grid.Column="0" Content="Active" HorizontalContentAlignment="Left" Width="140"/>
							<CheckBox/>
						</StackPanel>
						<CheckBox Grid.Column="1"></CheckBox>
						<CheckBox Grid.Column="2"></CheckBox>
						<CheckBox Grid.Column="3"></CheckBox>
						<CheckBox Grid.Column="4"></CheckBox>
						<CheckBox Grid.Column="5"></CheckBox>
						<CheckBox Grid.Column="6"></CheckBox>
						<CheckBox Grid.Column="7"></CheckBox>
						<CheckBox Grid.Column="8"></CheckBox>
						<CheckBox Grid.Column="9"></CheckBox>
					</ItemsControl>
				</Grid>
				<Grid>
					<ItemsControl Style="{StaticResource GridItemsStyle}" >
						<Label Grid.Column="0" Content="Back Prices" HorizontalContentAlignment="Left"/>
						<Label Grid.Column="1" Content="{Binding Path=Values[0][0]}"/>
						<Label Grid.Column="2" Content="{Binding Path=Values[0][1]}"/>
						<Label Grid.Column="3" Content="{Binding Path=Values[0][2]}"/>
						<Label Grid.Column="4" Content="{Binding Path=Values[0][3]}"/>
						<Label Grid.Column="5" Content="{Binding Path=Values[0][4]}"/>
						<Label Grid.Column="6" Content="{Binding Path=Values[0][5]}"/>
						<Label Grid.Column="7" Content="{Binding Path=Values[0][6]}"/>
						<Label Grid.Column="8" Content="{Binding Path=Values[0][7]}"/>
						<Label Grid.Column="9" Content="{Binding Path=Values[0][8]}"/>
					</ItemsControl>
				</Grid>
				<Grid>
					<ItemsControl Style="{StaticResource GridItemsStyle}" >
						<Label Grid.Column="0" Content="Back Stakes" HorizontalContentAlignment="Left"/>
						<Label Grid.Column="1" Content="{Binding Path=Values[2][0]}"/>
						<Label Grid.Column="2" Content="{Binding Path=Values[2][1]}"/>
						<Label Grid.Column="3" Content="{Binding Path=Values[2][2]}"/>
						<Label Grid.Column="4" Content="{Binding Path=Values[2][3]}"/>
						<Label Grid.Column="5" Content="{Binding Path=Values[2][4]}"/>
						<Label Grid.Column="6" Content="{Binding Path=Values[2][5]}"/>
						<Label Grid.Column="7" Content="{Binding Path=Values[2][6]}"/>
						<Label Grid.Column="8" Content="{Binding Path=Values[2][7]}"/>
						<Label Grid.Column="9" Content="{Binding Path=Values[2][8]}"/>
					</ItemsControl>
				</Grid>
				<Grid>
					<ItemsControl Style="{StaticResource GridItemsStyle}" >
						<Label Grid.Column="0" Content="Lay Prices" HorizontalContentAlignment="Left"/>
						<Label Grid.Column="1" Content="{Binding Path=Values[1][0]}"/>
						<Label Grid.Column="2" Content="{Binding Path=Values[1][1]}"/>
						<Label Grid.Column="3" Content="{Binding Path=Values[1][2]}"/>
						<Label Grid.Column="4" Content="{Binding Path=Values[1][3]}"/>
						<Label Grid.Column="5" Content="{Binding Path=Values[1][4]}"/>
						<Label Grid.Column="6" Content="{Binding Path=Values[1][5]}"/>
						<Label Grid.Column="7" Content="{Binding Path=Values[1][6]}"/>
						<Label Grid.Column="8" Content="{Binding Path=Values[1][7]}"/>
						<Label Grid.Column="9" Content="{Binding Path=Values[1][8]}"/>
					</ItemsControl>
				</Grid>
				<Grid>
					<ItemsControl Style="{StaticResource GridItemsStyle}" >
						<Label Grid.Column="0" Content="Lay Stakes" HorizontalContentAlignment="Left"/>
						<Label Grid.Column="1" Content="{Binding Path=Values[3][0]}"/>
						<Label Grid.Column="2" Content="{Binding Path=Values[3][1]}"/>
						<Label Grid.Column="3" Content="{Binding Path=Values[3][2]}"/>
						<Label Grid.Column="4" Content="{Binding Path=Values[3][3]}"/>
						<Label Grid.Column="5" Content="{Binding Path=Values[3][4]}"/>
						<Label Grid.Column="6" Content="{Binding Path=Values[3][5]}"/>
						<Label Grid.Column="7" Content="{Binding Path=Values[3][6]}"/>
						<Label Grid.Column="8" Content="{Binding Path=Values[3][7]}"/>
						<Label Grid.Column="9" Content="{Binding Path=Values[3][8]}"/>
					</ItemsControl>
				</Grid>
			</StackPanel>
		</Grid>
	</Grid>
</UserControl>
